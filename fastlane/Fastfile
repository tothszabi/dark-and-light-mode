default_platform(:ios)

platform :ios do
  desc "Run tests"
  lane :testing do
    # begin
    #   run_tests(
    #     project: "DarkAndLightMode.xcodeproj",
    #     scheme: "DarkAndLightMode Internal",
    #   )
    # rescue => ex
    #   # Can be empty
    # end

    run_tests(
      project: "DarkAndLightMode.xcodeproj",
      scheme: "DarkAndLightMode Internal",
    )
    
  ensure
    puts "xcresult path: #{lane_context[SharedValues::SCAN_GENERATED_XCRESULT_PATH]}"
    sh "envman add --key BITRISE_XCRESULT_PATH --value \"#{lane_context[SharedValues::SCAN_GENERATED_XCRESULT_PATH]}\""
  end

  desc "Random test"
  lane :random_test do |values|
    puts "Hello world"

    parameter  = values[:param]
    puts parameter
  end
end
